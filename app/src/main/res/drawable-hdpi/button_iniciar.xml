<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="20dip" />
             <stroke android:width="1dip" 
                 android:color="#690" />
             <gradient  
                 android:angle="270"  
                 android:startColor="#ffadf000"
                 android:endColor="#ffadf000"  />
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="20dip" />
             <stroke android:width="3dip" android:color="#e0e0e0" />
             <solid  android:color="#e0341e"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="20dip" />
             <stroke android:width="3dip" android:color="#690" />
             <gradient  
                 android:angle="270"  
                 android:centerColor="#690"
				 android:startColor="#9c0"
                 android:endColor="#9c0" />
         </shape>
     </item>
</selector>