<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pref_range_option_title"
        android:id="@+id/textView7"
        android:layout_margin="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_temperature"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <com.edmodo.rangebar.RangeBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:tickCount="20"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/rangebar_temp_min"

            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/rangebar_temp"
            android:layout_alignStart="@+id/rangebar_temp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/rangebar_temp_max"
            android:layout_marginRight="30dp"
            android:layout_alignTop="@+id/rangebar_temp_min"
            android:layout_alignRight="@+id/rangebar_temp"
            android:layout_alignEnd="@+id/rangebar_temp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_idea_512"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <com.edmodo.rangebar.RangeBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            custom:tickCount="20"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/rangebar_light_min"
            android:layout_marginLeft="30dp"

            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/rangebar_light"
            android:layout_alignStart="@+id/rangebar_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/rangebar_light_max"
            android:layout_marginRight="30dp"
            android:layout_alignTop="@+id/rangebar_light_min"
            android:layout_alignRight="@+id/rangebar_light"
            android:layout_alignEnd="@+id/rangebar_light" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_humidity_512"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <com.edmodo.rangebar.RangeBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar_hum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            custom:tickCount="10"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/rangebar_hum_min"

            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/rangebar_hum"
            android:layout_alignStart="@+id/rangebar_hum" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/rangebar_hum_max"

            android:layout_marginRight="30dp"
            android:layout_alignTop="@+id/rangebar_hum_min"
            android:layout_alignRight="@+id/rangebar_hum"
            android:layout_alignEnd="@+id/rangebar_hum" />
    </RelativeLayout>

</LinearLayout>